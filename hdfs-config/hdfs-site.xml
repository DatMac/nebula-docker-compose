<!-- hdfs-site.xml for HDFS client -->
<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
        <description>
            Default block replication. The actual number of replications can be
            specified when the file is created. For our single DataNode setup,
            a replication factor of 1 is appropriate.
        </description>
    </property>

    <!--
    <property>
        <name>dfs.client.use.datanode.hostname</name>
